{
  "name": "sharepoint-file-viewer",
  "version": "1.0.0",
  "description": "Application to access and display SharePoint Excel files",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "cross-env NODE_ENV=production vite build",
    "preview": "vite preview",
    "start": "node server/sharepoint-api.cjs",
    "start:dev": "nodemon server/sharepoint-api.cjs",
    "build:all": "npm run build && npm run build:server",
    "build:server": "cd server && npm install",
    "serve": "NODE_ENV=production node server/sharepoint-api.cjs"
  },
  "dependencies": {
    "@azure/identity": "^4.10.2",
    "@microsoft/microsoft-graph-client": "^3.0.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.5",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "nodemon": "^3.0.1",
    "vite": "^7.0.6"
  }
}
